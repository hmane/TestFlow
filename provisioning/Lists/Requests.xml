      <Field Type="Number" Name="CloseoutSubmitterHours" DisplayName="Closeout Submitter Hours" Min="0" Max="10000" Decimals="2" Group="Time Tracking" ID="{0B82A1E9-1592-4CCC-849A-DB458B531304}" />
      <Field Type="Number" Name="TotalReviewerHours" DisplayName="Total Reviewer Hours" Min="0" Max="10000" Decimals="2" Group="Time Tracking" ID="{EFCB81C8-98AA-44BC-88E4-485D2F6EA20B}" />
      <Field Type="Number" Name="TotalSubmitterHours" DisplayName="Total Submitter Hours" Min="0" Max="10000" Decimals="2" Group="Time Tracking" ID="{EB87F936-9C42-416F-90F5-A1B1EA94645A}" />

