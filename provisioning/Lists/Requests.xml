          <FieldRef Name="OnHoldBy" />
          <FieldRef Name="OnHoldSince" />
          <FieldRef Name="OnHoldReason" />
          <FieldRef Name="PreviousStatus" />
          <FieldRef Name="Modified" />
        </pnp:ViewFields>
      </pnp:View>

      <!-- Rush Requests (open status only: Draft, Legal Intake, Assign Attorney, In Review, Closeout, On Hold) -->
      <pnp:View Name="RushRequests" DisplayName="Rush Requests" DefaultView="false" RowLimit="50" Paged="true" TabularView="false">
        <pnp:Query>
          <Where>
            <And>
              <Eq><FieldRef Name="IsRushRequest" /><Value Type="Boolean">1</Value></Eq>
              <In>
                <FieldRef Name="Status" />
                <Values>
                  <Value Type="Choice">Draft</Value>
                  <Value Type="Choice">Legal Intake</Value>
                  <Value Type="Choice">Assign Attorney</Value>
                  <Value Type="Choice">In Review</Value>
                  <Value Type="Choice">Closeout</Value>
                  <Value Type="Choice">On Hold</Value>
                </Values>
              </In>
            </And>
          </Where>
          <OrderBy><FieldRef Name="Modified" Ascending="FALSE" /></OrderBy>
        </pnp:Query>
        <pnp:ViewFields>
          <FieldRef Name="Title" />
          <FieldRef Name="RequestTitle" />
          <FieldRef Name="Status" />
          <FieldRef Name="SubmittedBy" />
          <FieldRef Name="Attorney" />
          <FieldRef Name="TargetReturnDate" />
          <FieldRef Name="RushRationale" />
          <FieldRef Name="Modified" />
        </pnp:ViewFields>
      </pnp:View>

    </pnp:Views>

  </pnp:ListInstance>

