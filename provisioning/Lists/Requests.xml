    <!-- Dashboard Views -->
    <pnp:Views>
      <!-- ============================================ -->
      <!-- HOME DASHBOARD VIEWS (Submitters & Admins) -->
      <!-- ============================================ -->

      <!-- My Open Requests - Requests created by current user that are not completed/cancelled -->
      <pnp:View Name="MyOpenRequests" DisplayName="My Open Requests" DefaultView="false" RowLimit="50" Paged="true" TabularView="false">
        <pnp:Query>
          <Where>
            <And>
              <Eq><FieldRef Name="Author" /><Value Type="Integer"><UserID/></Value></Eq>
              <And>
                <Neq><FieldRef Name="Status" /><Value Type="Choice">Completed</Value></Neq>
                <Neq><FieldRef Name="Status" /><Value Type="Choice">Cancelled</Value></Neq>
              </And>
            </And>
          </Where>
          <OrderBy><FieldRef Name="Created" Ascending="FALSE" /></OrderBy>
        </pnp:Query>
        <pnp:ViewFields>
          <FieldRef Name="Title" />
          <FieldRef Name="RequestTitle" />
          <FieldRef Name="Status" />
          <FieldRef Name="TargetReturnDate" />
          <FieldRef Name="Attorney" />
          <FieldRef Name="Created" />
        </pnp:ViewFields>
      </pnp:View>

      <!-- My Completed Requests - Requests created by current user that are completed -->
      <pnp:View Name="MyCompletedRequests" DisplayName="My Completed Requests" DefaultView="false" RowLimit="50" Paged="true" TabularView="false">
        <pnp:Query>
          <Where>
            <And>
              <Eq><FieldRef Name="Author" /><Value Type="Integer"><UserID/></Value></Eq>
              <Eq><FieldRef Name="Status" /><Value Type="Choice">Completed</Value></Eq>
            </And>
          </Where>
          <OrderBy><FieldRef Name="CloseoutOn" Ascending="FALSE" /></OrderBy>
        </pnp:Query>
        <pnp:ViewFields>
          <FieldRef Name="Title" />
          <FieldRef Name="RequestTitle" />
          <FieldRef Name="Status" />
          <FieldRef Name="CloseoutOn" />
          <FieldRef Name="TrackingId" />
        </pnp:ViewFields>
      </pnp:View>

      <!-- All Open Requests - For Admins to see all open requests -->
      <pnp:View Name="AllOpenRequests" DisplayName="All Open Requests" DefaultView="false" RowLimit="100" Paged="true" TabularView="false">
        <pnp:Query>
          <Where>
            <And>
              <Neq><FieldRef Name="Status" /><Value Type="Choice">Completed</Value></Neq>
              <Neq><FieldRef Name="Status" /><Value Type="Choice">Cancelled</Value></Neq>
            </And>
          </Where>
          <OrderBy><FieldRef Name="Created" Ascending="FALSE" /></OrderBy>
        </pnp:Query>
        <pnp:ViewFields>
          <FieldRef Name="Title" />
          <FieldRef Name="RequestTitle" />
          <FieldRef Name="Status" />
          <FieldRef Name="SubmittedBy" />
          <FieldRef Name="Attorney" />
          <FieldRef Name="TargetReturnDate" />
          <FieldRef Name="Created" />
        </pnp:ViewFields>
      </pnp:View>

