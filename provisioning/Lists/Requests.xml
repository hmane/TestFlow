    <!-- Dashboard Views -->
    <!--
      Open Status Definition: Draft, Legal Intake, Assign Attorney, In Review, Closeout, On Hold
      Closed Status Definition: Completed, Cancelled
      Awaiting Foreside Documents: Separate view (not open, not closed)
      All views sort by Modified DESC unless a specific queue ordering is needed
    -->
    <pnp:Views>
      <!-- ============================================ -->
      <!-- HOME DASHBOARD VIEWS (Submitters & Admins) -->
      <!-- ============================================ -->

      <!-- My Open Requests - Requests created by current user in open status (Draft, Legal Intake, Assign Attorney, In Review, Closeout, On Hold) -->
      <pnp:View Name="MyOpenRequests" DisplayName="My Open Requests" DefaultView="false" RowLimit="50" Paged="true" TabularView="false">
        <pnp:Query>
          <Where>
            <And>
              <Eq><FieldRef Name="Author" /><Value Type="Integer"><UserID/></Value></Eq>
              <In>
                <FieldRef Name="Status" />
                <Values>
                  <Value Type="Choice">Draft</Value>
                  <Value Type="Choice">Legal Intake</Value>
                  <Value Type="Choice">Assign Attorney</Value>
                  <Value Type="Choice">In Review</Value>
                  <Value Type="Choice">Closeout</Value>
                  <Value Type="Choice">On Hold</Value>
                </Values>
              </In>
            </And>
          </Where>
          <OrderBy><FieldRef Name="Modified" Ascending="FALSE" /></OrderBy>
        </pnp:Query>
        <pnp:ViewFields>
          <FieldRef Name="Title" />
          <FieldRef Name="RequestTitle" />
          <FieldRef Name="Status" />
          <FieldRef Name="TargetReturnDate" />
          <FieldRef Name="Attorney" />
          <FieldRef Name="Modified" />
        </pnp:ViewFields>
      </pnp:View>

      <!-- My Completed Requests - Requests created by current user that are Completed OR Cancelled -->
      <pnp:View Name="MyCompletedRequests" DisplayName="My Completed Requests" DefaultView="false" RowLimit="50" Paged="true" TabularView="false">
        <pnp:Query>
          <Where>
            <And>
              <Eq><FieldRef Name="Author" /><Value Type="Integer"><UserID/></Value></Eq>
              <Or>
                <Eq><FieldRef Name="Status" /><Value Type="Choice">Completed</Value></Eq>
                <Eq><FieldRef Name="Status" /><Value Type="Choice">Cancelled</Value></Eq>
              </Or>
            </And>
          </Where>
          <OrderBy><FieldRef Name="Modified" Ascending="FALSE" /></OrderBy>
        </pnp:Query>
        <pnp:ViewFields>
          <FieldRef Name="Title" />
          <FieldRef Name="RequestTitle" />
          <FieldRef Name="Status" />
          <FieldRef Name="TargetReturnDate" />
          <FieldRef Name="CloseoutOn" />
          <FieldRef Name="TrackingId" />
          <FieldRef Name="Modified" />
        </pnp:ViewFields>
      </pnp:View>

      <!-- My Awaiting Foreside Documents - Requests created by current user awaiting foreside documents -->
      <pnp:View Name="MyAwaitingForesideDocuments" DisplayName="My Awaiting Foreside Documents" DefaultView="false" RowLimit="50" Paged="true" TabularView="false">
        <pnp:Query>
          <Where>
            <And>
              <Eq><FieldRef Name="Author" /><Value Type="Integer"><UserID/></Value></Eq>
              <Eq><FieldRef Name="Status" /><Value Type="Choice">Awaiting Foreside Documents</Value></Eq>
            </And>
          </Where>
          <OrderBy><FieldRef Name="Modified" Ascending="FALSE" /></OrderBy>
        </pnp:Query>
        <pnp:ViewFields>
          <FieldRef Name="Title" />
          <FieldRef Name="RequestTitle" />
          <FieldRef Name="AwaitingForesideSince" />
          <FieldRef Name="TrackingId" />
          <FieldRef Name="Modified" />
        </pnp:ViewFields>
      </pnp:View>

      <!-- All Open Requests - For Admins to see all open requests (Draft, Legal Intake, Assign Attorney, In Review, Closeout, On Hold) -->
      <pnp:View Name="AllOpenRequests" DisplayName="All Open Requests" DefaultView="false" RowLimit="100" Paged="true" TabularView="false">
        <pnp:Query>
          <Where>
            <In>
              <FieldRef Name="Status" />
              <Values>
                <Value Type="Choice">Draft</Value>
                <Value Type="Choice">Legal Intake</Value>
                <Value Type="Choice">Assign Attorney</Value>
                <Value Type="Choice">In Review</Value>
                <Value Type="Choice">Closeout</Value>
                <Value Type="Choice">On Hold</Value>
              </Values>
            </In>
          </Where>
          <OrderBy><FieldRef Name="Modified" Ascending="FALSE" /></OrderBy>
        </pnp:Query>
        <pnp:ViewFields>
          <FieldRef Name="Title" />
          <FieldRef Name="RequestTitle" />
          <FieldRef Name="Status" />
          <FieldRef Name="SubmittedBy" />
          <FieldRef Name="Attorney" />
          <FieldRef Name="TargetReturnDate" />
          <FieldRef Name="Modified" />
        </pnp:ViewFields>
      </pnp:View>

      <!-- All Completed Requests - For Admins to see all Completed and Cancelled requests -->
      <pnp:View Name="AllCompletedRequests" DisplayName="All Completed Requests" DefaultView="false" RowLimit="100" Paged="true" TabularView="false">
        <pnp:Query>
          <Where>
            <Or>
              <Eq><FieldRef Name="Status" /><Value Type="Choice">Completed</Value></Eq>
              <Eq><FieldRef Name="Status" /><Value Type="Choice">Cancelled</Value></Eq>
            </Or>
          </Where>
          <OrderBy><FieldRef Name="Modified" Ascending="FALSE" /></OrderBy>
        </pnp:Query>
        <pnp:ViewFields>
          <FieldRef Name="Title" />
          <FieldRef Name="RequestTitle" />
          <FieldRef Name="Status" />
          <FieldRef Name="SubmittedBy" />
          <FieldRef Name="CloseoutOn" />
          <FieldRef Name="TrackingId" />
          <FieldRef Name="Modified" />
        </pnp:ViewFields>
      </pnp:View>

      <!-- ============================================ -->
      <!-- LEGAL ADMIN DASHBOARD VIEWS -->
      <!-- ============================================ -->

      <!-- Legal Intake Queue - Requests pending intake -->
      <pnp:View Name="LegalIntakeQueue" DisplayName="Legal Intake Queue" DefaultView="false" RowLimit="50" Paged="true" TabularView="false">
        <pnp:Query>
          <Where>
            <Eq><FieldRef Name="Status" /><Value Type="Choice">Legal Intake</Value></Eq>
          </Where>
          <OrderBy><FieldRef Name="Modified" Ascending="FALSE" /></OrderBy>
        </pnp:Query>
        <pnp:ViewFields>
          <FieldRef Name="Title" />
          <FieldRef Name="RequestTitle" />
          <FieldRef Name="SubmittedBy" />
          <FieldRef Name="SubmittedOn" />
          <FieldRef Name="ReviewAudience" />
          <FieldRef Name="TargetReturnDate" />
          <FieldRef Name="IsRushRequest" />
          <FieldRef Name="Modified" />
        </pnp:ViewFields>
      </pnp:View>

      <!-- Pending Attorney Assignment - Requests waiting for attorney assignment -->
      <pnp:View Name="PendingAttorneyAssignment" DisplayName="Pending Attorney Assignment" DefaultView="false" RowLimit="50" Paged="true" TabularView="false">
        <pnp:Query>
          <Where>
            <Eq><FieldRef Name="Status" /><Value Type="Choice">Assign Attorney</Value></Eq>
          </Where>
          <OrderBy><FieldRef Name="Modified" Ascending="FALSE" /></OrderBy>
        </pnp:Query>
        <pnp:ViewFields>
          <FieldRef Name="Title" />
          <FieldRef Name="RequestTitle" />
          <FieldRef Name="SubmittedBy" />
          <FieldRef Name="ReviewAudience" />
          <FieldRef Name="TargetReturnDate" />
          <FieldRef Name="IsRushRequest" />
          <FieldRef Name="SubmittedToAssignAttorneyOn" />
          <FieldRef Name="Modified" />
        </pnp:ViewFields>
      </pnp:View>

      <!-- Legal Admin - All In Review -->
      <pnp:View Name="LegalAdminInReview" DisplayName="All In Review" DefaultView="false" RowLimit="50" Paged="true" TabularView="false">
        <pnp:Query>
          <Where>
            <Eq><FieldRef Name="Status" /><Value Type="Choice">In Review</Value></Eq>
          </Where>
          <OrderBy><FieldRef Name="Modified" Ascending="FALSE" /></OrderBy>
        </pnp:Query>
        <pnp:ViewFields>
          <FieldRef Name="Title" />
          <FieldRef Name="RequestTitle" />
          <FieldRef Name="Attorney" />
          <FieldRef Name="LegalReviewStatus" />
          <FieldRef Name="ComplianceReviewStatus" />
          <FieldRef Name="TargetReturnDate" />
          <FieldRef Name="Modified" />
        </pnp:ViewFields>
      </pnp:View>

      <!-- ============================================ -->
      <!-- ATTORNEY DASHBOARD VIEWS -->
      <!-- ============================================ -->

      <!-- My Assigned Requests - Requests assigned to current attorney (open status: Draft, Legal Intake, Assign Attorney, In Review, Closeout, On Hold) -->
      <pnp:View Name="MyAssignedRequests" DisplayName="My Assigned Requests" DefaultView="false" RowLimit="50" Paged="true" TabularView="false">
        <pnp:Query>
          <Where>
            <And>
              <Eq><FieldRef Name="Attorney" /><Value Type="Integer"><UserID/></Value></Eq>
              <In>
                <FieldRef Name="Status" />
                <Values>
                  <Value Type="Choice">Draft</Value>
                  <Value Type="Choice">Legal Intake</Value>
                  <Value Type="Choice">Assign Attorney</Value>
                  <Value Type="Choice">In Review</Value>
                  <Value Type="Choice">Closeout</Value>
                  <Value Type="Choice">On Hold</Value>
                </Values>
              </In>
            </And>
          </Where>
          <OrderBy><FieldRef Name="Modified" Ascending="FALSE" /></OrderBy>
        </pnp:Query>
        <pnp:ViewFields>
          <FieldRef Name="Title" />
          <FieldRef Name="RequestTitle" />
          <FieldRef Name="Status" />
          <FieldRef Name="LegalReviewStatus" />
          <FieldRef Name="SubmittedBy" />
          <FieldRef Name="TargetReturnDate" />
          <FieldRef Name="IsRushRequest" />
          <FieldRef Name="Modified" />
        </pnp:ViewFields>
      </pnp:View>

      <!-- Attorney - Pending My Review (Not Started, In Progress, Waiting On Attorney) -->
      <pnp:View Name="AttorneyPendingReview" DisplayName="Pending My Review" DefaultView="false" RowLimit="50" Paged="true" TabularView="false">
        <pnp:Query>
          <Where>
            <And>
              <Eq><FieldRef Name="Attorney" /><Value Type="Integer"><UserID/></Value></Eq>
              <And>
                <Eq><FieldRef Name="Status" /><Value Type="Choice">In Review</Value></Eq>
                <Or>
                  <Or>
                    <Eq><FieldRef Name="LegalReviewStatus" /><Value Type="Choice">Not Started</Value></Eq>
                    <Eq><FieldRef Name="LegalReviewStatus" /><Value Type="Choice">In Progress</Value></Eq>
                  </Or>
                  <Eq><FieldRef Name="LegalReviewStatus" /><Value Type="Choice">Waiting On Attorney</Value></Eq>
                </Or>
              </And>
            </And>
          </Where>
          <OrderBy><FieldRef Name="Modified" Ascending="FALSE" /></OrderBy>
        </pnp:Query>
        <pnp:ViewFields>
          <FieldRef Name="Title" />
          <FieldRef Name="RequestTitle" />
          <FieldRef Name="LegalReviewStatus" />
          <FieldRef Name="SubmittedBy" />
          <FieldRef Name="TargetReturnDate" />
          <FieldRef Name="IsRushRequest" />
          <FieldRef Name="Modified" />
        </pnp:ViewFields>
      </pnp:View>

      <!-- Attorney - Completed Reviews (completed or cancelled requests where attorney was assigned) -->
      <pnp:View Name="AttorneyCompletedReviews" DisplayName="My Completed Reviews" DefaultView="false" RowLimit="50" Paged="true" TabularView="false">
        <pnp:Query>
          <Where>
            <And>
              <Eq><FieldRef Name="Attorney" /><Value Type="Integer"><UserID/></Value></Eq>
              <Or>
                <Eq><FieldRef Name="Status" /><Value Type="Choice">Completed</Value></Eq>
                <Eq><FieldRef Name="Status" /><Value Type="Choice">Cancelled</Value></Eq>
              </Or>
            </And>
          </Where>
          <OrderBy><FieldRef Name="Modified" Ascending="FALSE" /></OrderBy>
        </pnp:Query>
        <pnp:ViewFields>
          <FieldRef Name="Title" />
          <FieldRef Name="RequestTitle" />
          <FieldRef Name="Status" />
          <FieldRef Name="LegalReviewOutcome" />
          <FieldRef Name="LegalReviewCompletedOn" />
          <FieldRef Name="Modified" />
        </pnp:ViewFields>
      </pnp:View>

      <!-- ============================================ -->
      <!-- ATTORNEY ASSIGNER DASHBOARD VIEWS -->
      <!-- ============================================ -->

      <!-- Requests Awaiting Assignment -->
      <pnp:View Name="AwaitingAttorneyAssignment" DisplayName="Awaiting Attorney Assignment" DefaultView="false" RowLimit="50" Paged="true" TabularView="false">
        <pnp:Query>
          <Where>
            <Eq><FieldRef Name="Status" /><Value Type="Choice">Assign Attorney</Value></Eq>
          </Where>
          <OrderBy><FieldRef Name="Modified" Ascending="FALSE" /></OrderBy>
        </pnp:Query>
        <pnp:ViewFields>
          <FieldRef Name="Title" />
          <FieldRef Name="RequestTitle" />
          <FieldRef Name="SubmittedBy" />
          <FieldRef Name="ReviewAudience" />
          <FieldRef Name="TargetReturnDate" />
          <FieldRef Name="IsRushRequest" />
          <FieldRef Name="SubmissionItem" />
          <FieldRef Name="Modified" />
        </pnp:ViewFields>
      </pnp:View>

      <!-- ============================================ -->
      <!-- COMPLIANCE DASHBOARD VIEWS -->
      <!-- ============================================ -->

      <!-- Compliance - Pending Review (Not Started, In Progress, Waiting On Compliance) -->
      <pnp:View Name="CompliancePendingReview" DisplayName="Pending Compliance Review" DefaultView="false" RowLimit="50" Paged="true" TabularView="false">
        <pnp:Query>
          <Where>
            <And>
              <Eq><FieldRef Name="Status" /><Value Type="Choice">In Review</Value></Eq>
              <And>
                <Or>
                  <Eq><FieldRef Name="ReviewAudience" /><Value Type="Choice">Compliance</Value></Eq>
                  <Eq><FieldRef Name="ReviewAudience" /><Value Type="Choice">Both</Value></Eq>
                </Or>
                <Or>
                  <Or>
                    <Eq><FieldRef Name="ComplianceReviewStatus" /><Value Type="Choice">Not Started</Value></Eq>
                    <Eq><FieldRef Name="ComplianceReviewStatus" /><Value Type="Choice">In Progress</Value></Eq>
                  </Or>
                  <Eq><FieldRef Name="ComplianceReviewStatus" /><Value Type="Choice">Waiting On Compliance</Value></Eq>
                </Or>
              </And>
            </And>
          </Where>
          <OrderBy><FieldRef Name="Modified" Ascending="FALSE" /></OrderBy>
        </pnp:Query>
        <pnp:ViewFields>
          <FieldRef Name="Title" />
          <FieldRef Name="RequestTitle" />
          <FieldRef Name="ComplianceReviewStatus" />
          <FieldRef Name="SubmittedBy" />
          <FieldRef Name="TargetReturnDate" />
          <FieldRef Name="IsRushRequest" />
          <FieldRef Name="Modified" />
        </pnp:ViewFields>
      </pnp:View>

      <!-- Compliance - Completed Reviews (Completed or Cancelled requests requiring compliance review) -->
      <pnp:View Name="ComplianceCompletedReviews" DisplayName="Completed Compliance Reviews" DefaultView="false" RowLimit="50" Paged="true" TabularView="false">
        <pnp:Query>
          <Where>
            <And>
              <Or>
                <Eq><FieldRef Name="ReviewAudience" /><Value Type="Choice">Compliance</Value></Eq>
                <Eq><FieldRef Name="ReviewAudience" /><Value Type="Choice">Both</Value></Eq>
              </Or>
              <Or>
                <Eq><FieldRef Name="Status" /><Value Type="Choice">Completed</Value></Eq>
                <Eq><FieldRef Name="Status" /><Value Type="Choice">Cancelled</Value></Eq>
              </Or>
            </And>
          </Where>
          <OrderBy><FieldRef Name="Modified" Ascending="FALSE" /></OrderBy>
        </pnp:Query>
        <pnp:ViewFields>
          <FieldRef Name="Title" />
          <FieldRef Name="RequestTitle" />
          <FieldRef Name="Status" />
          <FieldRef Name="ComplianceReviewOutcome" />
          <FieldRef Name="ComplianceReviewCompletedOn" />
          <FieldRef Name="Modified" />
        </pnp:ViewFields>
      </pnp:View>

      <!-- ============================================ -->
      <!-- CLOSEOUT VIEWS -->
      <!-- ============================================ -->

      <!-- Requests in Closeout -->
      <pnp:View Name="CloseoutQueue" DisplayName="Closeout Queue" DefaultView="false" RowLimit="50" Paged="true" TabularView="false">
        <pnp:Query>
          <Where>
            <Eq><FieldRef Name="Status" /><Value Type="Choice">Closeout</Value></Eq>
          </Where>
          <OrderBy><FieldRef Name="Modified" Ascending="FALSE" /></OrderBy>
        </pnp:Query>
        <pnp:ViewFields>
          <FieldRef Name="Title" />
          <FieldRef Name="RequestTitle" />
          <FieldRef Name="SubmittedBy" />
          <FieldRef Name="LegalReviewOutcome" />
          <FieldRef Name="ComplianceReviewOutcome" />
          <FieldRef Name="IsForesideReviewRequired" />
          <FieldRef Name="IsRetailUse" />
          <FieldRef Name="Modified" />
        </pnp:ViewFields>
      </pnp:View>

      <!-- ============================================ -->
      <!-- FORESIDE DOCUMENTS VIEWS -->
      <!-- ============================================ -->

      <!-- Requests Awaiting Foreside Documents (Admin/All view) -->
      <pnp:View Name="AwaitingForesideDocuments" DisplayName="Awaiting Foreside Documents" DefaultView="false" RowLimit="50" Paged="true" TabularView="false">
        <pnp:Query>
          <Where>
            <Eq><FieldRef Name="Status" /><Value Type="Choice">Awaiting Foreside Documents</Value></Eq>
          </Where>
          <OrderBy><FieldRef Name="Modified" Ascending="FALSE" /></OrderBy>
        </pnp:Query>
        <pnp:ViewFields>
          <FieldRef Name="Title" />
          <FieldRef Name="RequestTitle" />
          <FieldRef Name="SubmittedBy" />
          <FieldRef Name="AwaitingForesideSince" />
          <FieldRef Name="TrackingId" />
          <FieldRef Name="Modified" />
        </pnp:ViewFields>
      </pnp:View>

      <!-- ============================================ -->
      <!-- GENERAL VIEWS -->
      <!-- ============================================ -->

      <!-- All Requests (Default) -->
      <pnp:View Name="AllItems" DisplayName="All Requests" DefaultView="true" RowLimit="100" Paged="true" TabularView="false">
        <pnp:Query>
          <OrderBy><FieldRef Name="Modified" Ascending="FALSE" /></OrderBy>
        </pnp:Query>
        <pnp:ViewFields>
          <FieldRef Name="Title" />
          <FieldRef Name="RequestTitle" />
          <FieldRef Name="Status" />
          <FieldRef Name="SubmittedBy" />
          <FieldRef Name="Attorney" />
          <FieldRef Name="TargetReturnDate" />
          <FieldRef Name="Modified" />
        </pnp:ViewFields>
      </pnp:View>

      <!-- On Hold Requests -->
      <pnp:View Name="OnHoldRequests" DisplayName="On Hold Requests" DefaultView="false" RowLimit="50" Paged="true" TabularView="false">
        <pnp:Query>
          <Where>
            <Eq><FieldRef Name="Status" /><Value Type="Choice">On Hold</Value></Eq>
          </Where>
          <OrderBy><FieldRef Name="Modified" Ascending="FALSE" /></OrderBy>
        </pnp:Query>
        <pnp:ViewFields>
