<pnp:ListInstance xmlns:pnp="http://schemas.dev.office.com/PnP/2022/09/ProvisioningSchema"
                  Title="Configuration"
                  Description="Application configuration settings"
                  TemplateType="100"
                  Url="Lists/Configuration"
                  OnQuickLaunch="true"
                  EnableVersioning="true"
                  EnableMinorVersions="false"
                  EnableAttachments="false">

  <pnp:Fields>
    <Field Type="Text"
           DisplayName="Config Value"
           Name="ConfigValue"
           ID="{4F59D052-3E28-4C20-A752-FDA042C6B443}"
           Required="FALSE"
           MaxLength="255"
           Group="Configuration" />

    <Field Type="Note"
           DisplayName="Description"
           Name="Description"
           ID="{25502FB5-ABFC-45E8-91B5-C7F36153664C}"
           Required="FALSE"
           RichText="FALSE"
           NumLines="6"
           Group="Configuration" />

    <Field Type="Boolean"
           DisplayName="Is Active"
           Name="IsActive"
           ID="{7B3C457F-FFD2-4F18-81DA-A8D90AF332F5}"
           Required="FALSE"
           Group="Configuration">
      <Default>1</Default>
    </Field>

    <Field Type="Text"
           DisplayName="Category"
           Name="Category"
           ID="{26F1AAA6-5DF0-46D1-AB12-D9B31A32674D}"
           Required="FALSE"
           MaxLength="100"
           Group="Configuration" />
  </pnp:Fields>

  <pnp:Views>
    <pnp:View Name="AllItems" DisplayName="All Items" DefaultView="true" RowLimit="30" Paged="true">
      <pnp:Query>
        <OrderBy>
          <FieldRef Name="Category" Ascending="TRUE" />
          <FieldRef Name="Title" Ascending="TRUE" />
        </OrderBy>
      </pnp:Query>
      <pnp:ViewFields>
        <FieldRef Name="LinkTitle" />
        <FieldRef Name="ConfigValue" />
        <FieldRef Name="Category" />
        <FieldRef Name="IsActive" />
        <FieldRef Name="Description" />
        <FieldRef Name="Modified" />
      </pnp:ViewFields>
    </pnp:View>

    <pnp:View Name="ActiveConfigurations" DisplayName="Active Configurations" DefaultView="false" RowLimit="30" Paged="true">
      <pnp:Query>
        <Where>
          <Eq>
            <FieldRef Name="IsActive" />
            <Value Type="Boolean">1</Value>
          </Eq>
        </Where>
        <OrderBy>
          <FieldRef Name="Category" Ascending="TRUE" />
          <FieldRef Name="Title" Ascending="TRUE" />
        </OrderBy>
      </pnp:Query>
      <pnp:ViewFields>
        <FieldRef Name="LinkTitle" />
        <FieldRef Name="ConfigValue" />
        <FieldRef Name="Category" />
        <FieldRef Name="Description" />
        <FieldRef Name="Modified" />
      </pnp:ViewFields>
    </pnp:View>
  </pnp:Views>

  <pnp:DataRows>
    <pnp:DataRow>
      <pnp:DataValue FieldName="Title">azureFunctionUrl</pnp:DataValue>
      <pnp:DataValue FieldName="ConfigValue">https://your-function.azurewebsites.net/api</pnp:DataValue>
      <pnp:DataValue FieldName="Description">Azure Function endpoint for permission management</pnp:DataValue>
      <pnp:DataValue FieldName="IsActive">1</pnp:DataValue>
      <pnp:DataValue FieldName="Category">Integration</pnp:DataValue>
    </pnp:DataRow>
    <pnp:DataRow>
      <pnp:DataValue FieldName="Title">maxFileSizeMB</pnp:DataValue>
      <pnp:DataValue FieldName="ConfigValue">250</pnp:DataValue>
      <pnp:DataValue FieldName="Description">Maximum file upload size in megabytes</pnp:DataValue>
      <pnp:DataValue FieldName="IsActive">1</pnp:DataValue>
      <pnp:DataValue FieldName="Category">Limits</pnp:DataValue>
    </pnp:DataRow>
    <pnp:DataRow>
      <pnp:DataValue FieldName="Title">enablePhase2RequestTypes</pnp:DataValue>
      <pnp:DataValue FieldName="ConfigValue">false</pnp:DataValue>
      <pnp:DataValue FieldName="Description">Enable Phase 2 request types (General Review, IMA Review)</pnp:DataValue>
      <pnp:DataValue FieldName="IsActive">1</pnp:DataValue>
      <pnp:DataValue FieldName="Category">Features</pnp:DataValue>
    </pnp:DataRow>
    <pnp:DataRow>
      <pnp:DataValue FieldName="Title">WorkingHoursStart</pnp:DataValue>
      <pnp:DataValue FieldName="ConfigValue">8</pnp:DataValue>
      <pnp:DataValue FieldName="Description">Business day start hour (0-23, PST/PDT timezone). Default: 8 AM</pnp:DataValue>
      <pnp:DataValue FieldName="IsActive">1</pnp:DataValue>
      <pnp:DataValue FieldName="Category">TimeTracking</pnp:DataValue>
    </pnp:DataRow>
    <pnp:DataRow>
      <pnp:DataValue FieldName="Title">WorkingHoursEnd</pnp:DataValue>
      <pnp:DataValue FieldName="ConfigValue">17</pnp:DataValue>
      <pnp:DataValue FieldName="Description">Business day end hour (0-23, PST/PDT timezone). Default: 5 PM</pnp:DataValue>
      <pnp:DataValue FieldName="IsActive">1</pnp:DataValue>
      <pnp:DataValue FieldName="Category">TimeTracking</pnp:DataValue>
    </pnp:DataRow>
    <pnp:DataRow>
      <pnp:DataValue FieldName="Title">WorkingDays</pnp:DataValue>
      <pnp:DataValue FieldName="ConfigValue">1,2,3,4,5</pnp:DataValue>
      <pnp:DataValue FieldName="Description">Working days of week (1=Monday through 5=Friday). Weekends excluded.</pnp:DataValue>
      <pnp:DataValue FieldName="IsActive">1</pnp:DataValue>
      <pnp:DataValue FieldName="Category">TimeTracking</pnp:DataValue>
    </pnp:DataRow>
    <pnp:DataRow>
      <pnp:DataValue FieldName="Title">SearchResultLimit</pnp:DataValue>
      <pnp:DataValue FieldName="ConfigValue">10</pnp:DataValue>
      <pnp:DataValue FieldName="Description">Maximum number of search results to display in spotlight search</pnp:DataValue>
      <pnp:DataValue FieldName="IsActive">1</pnp:DataValue>
      <pnp:DataValue FieldName="Category">Search</pnp:DataValue>
    </pnp:DataRow>
    <pnp:DataRow>
      <pnp:DataValue FieldName="Title">RecentSearchesLimit</pnp:DataValue>
      <pnp:DataValue FieldName="ConfigValue">5</pnp:DataValue>
      <pnp:DataValue FieldName="Description">Maximum number of recent searches to store and display</pnp:DataValue>
      <pnp:DataValue FieldName="IsActive">1</pnp:DataValue>
      <pnp:DataValue FieldName="Category">Search</pnp:DataValue>
    </pnp:DataRow>
    <pnp:DataRow>
      <pnp:DataValue FieldName="Title">allowedFileExtensions</pnp:DataValue>
      <pnp:DataValue FieldName="ConfigValue">.pdf,.doc,.docx,.xls,.xlsx,.ppt,.pptx,.txt,.jpg,.jpeg,.png,.gif,.zip</pnp:DataValue>
      <pnp:DataValue FieldName="Description">Comma-separated list of allowed file extensions for document uploads (include the dot). Example: .pdf,.docx,.xlsx</pnp:DataValue>
      <pnp:DataValue FieldName="IsActive">1</pnp:DataValue>
      <pnp:DataValue FieldName="Category">FileUpload</pnp:DataValue>
    </pnp:DataRow>
  </pnp:DataRows>


</pnp:ListInstance>
