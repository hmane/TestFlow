                       PromoteAsTemplate="false"
                       Overwrite="true"
                       Layout="Article"
                       EnableComments="false"
                       Title="My Requests Dashboard"
                       PageName="MyRequestsDashboard.aspx">

    <pnp:Header Type="Default" LayoutType="FullWidthImage" ShowPublishDate="false" ShowTopicHeader="false" />

    <pnp:Sections>

      <!-- Section: Active Requests -->
      <pnp:Section Order="1" Type="OneColumn">
        <pnp:Controls>
          <pnp:CanvasControl WebPartType="List"
                              JsonControlData='{
                                "id": "f92bf067-bc19-489e-a556-7fe95f508720",
                                "instanceId": "00000000-0000-0000-0000-000000000001",
                                "title": "My Active Requests",
                                "description": "",
                                "serverProcessedContent": {
                                  "htmlStrings": {},
                                  "searchablePlainTexts": {},
                                  "imageSources": {},
