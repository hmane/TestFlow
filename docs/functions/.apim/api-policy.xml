<!--
=============================================================================
Legal Workflow Azure Functions - APIM API Policy
=============================================================================

This policy is applied at the API level in Azure API Management.
It handles:
1. JWT token validation (Azure AD authentication)
2. Token forwarding to backend Azure Functions
3. CORS for SPFx applications
4. Rate limiting and error handling

Prerequisites:
- Azure AD App Registration for the API
- APIM named value: aad-tenant-id (your Azure AD tenant ID)
- APIM named value: aad-client-id (your Azure AD app registration client ID)
- Backend URL configured to your Azure Functions app

=============================================================================
-->
<policies>
    <inbound>
        <base />

        <!-- CORS for SPFx applications -->
        <cors allow-credentials="true">
            <allowed-origins>
                <!-- Add your SharePoint tenant URL -->
                <origin>https://*.sharepoint.com</origin>
                <!-- Add localhost for development -->
                <origin>https://localhost:4321</origin>
            </allowed-origins>
            <allowed-methods preflight-result-max-age="300">
                <method>GET</method>
                <method>POST</method>
                <method>OPTIONS</method>
            </allowed-methods>
            <allowed-headers>
                <header>Authorization</header>
                <header>Content-Type</header>
                <header>Accept</header>
                <header>X-Requested-With</header>
            </allowed-headers>
            <expose-headers>
                <header>*</header>
            </expose-headers>
        </cors>

        <!-- Validate JWT token from Azure AD -->
        <!-- This validates that the user is authenticated with your Azure AD tenant -->
        <validate-jwt header-name="Authorization" failed-validation-httpcode="401" failed-validation-error-message="Unauthorized. Invalid or missing token." require-expiration-time="true" require-scheme="Bearer" require-signed-tokens="true">
            <openid-config url="https://login.microsoftonline.com/{{aad-tenant-id}}/v2.0/.well-known/openid-configuration" />
            <audiences>
                <!-- Your Azure AD App Registration Client ID or custom API URI -->
                <audience>api://{{aad-client-id}}</audience>
                <audience>{{aad-client-id}}</audience>
            </audiences>
            <issuers>
                <issuer>https://login.microsoftonline.com/{{aad-tenant-id}}/v2.0</issuer>
                <issuer>https://sts.windows.net/{{aad-tenant-id}}/</issuer>
            </issuers>
            <required-claims>
                <!-- Ensure the token has the required claims -->
                <claim name="aud" match="any">
                    <value>api://{{aad-client-id}}</value>
                    <value>{{aad-client-id}}</value>
                </claim>
            </required-claims>
        </validate-jwt>

        <!-- Forward the validated token to the backend -->
        <!-- The Azure Functions will use this token to extract user identity -->
        <set-header name="Authorization" exists-action="override">
            <value>@(context.Request.Headers.GetValueOrDefault("Authorization", ""))</value>
        </set-header>

        <!-- Add request tracking header -->
        <set-header name="X-Request-Id" exists-action="skip">
            <value>@(context.RequestId.ToString())</value>
        </set-header>

        <!-- Rate limiting (optional - adjust as needed) -->
        <rate-limit-by-key calls="100" renewal-period="60" counter-key="@(context.Request.Headers.GetValueOrDefault("Authorization","").AsJwt()?.Subject ?? context.Request.IpAddress)" />

    </inbound>

    <backend>
        <base />
    </backend>

    <outbound>
        <base />

        <!-- Add security headers -->
        <set-header name="X-Content-Type-Options" exists-action="override">
            <value>nosniff</value>
        </set-header>
        <set-header name="X-Frame-Options" exists-action="override">
            <value>DENY</value>
        </set-header>
    </outbound>

    <on-error>
        <base />

        <!-- Custom error responses -->
        <choose>
            <when condition="@(context.Response.StatusCode == 401)">
                <return-response>
                    <set-status code="401" reason="Unauthorized" />
                    <set-header name="Content-Type" exists-action="override">
                        <value>application/json</value>
                    </set-header>
                    <set-body>@{
                        return new JObject(
                            new JProperty("success", false),
                            new JProperty("message", "Authentication failed. Please ensure you are signed in with a valid account."),
                            new JProperty("errorCode", "UNAUTHORIZED")
                        ).ToString();
                    }</set-body>
                </return-response>
            </when>
            <when condition="@(context.Response.StatusCode == 403)">
                <return-response>
                    <set-status code="403" reason="Forbidden" />
                    <set-header name="Content-Type" exists-action="override">
                        <value>application/json</value>
                    </set-header>
                    <set-body>@{
                        return new JObject(
                            new JProperty("success", false),
                            new JProperty("message", "Access denied. You do not have permission to perform this action."),
                            new JProperty("errorCode", "FORBIDDEN")
                        ).ToString();
                    }</set-body>
                </return-response>
            </when>
            <when condition="@(context.Response.StatusCode == 429)">
                <return-response>
                    <set-status code="429" reason="Too Many Requests" />
                    <set-header name="Content-Type" exists-action="override">
                        <value>application/json</value>
                    </set-header>
                    <set-body>@{
                        return new JObject(
                            new JProperty("success", false),
                            new JProperty("message", "Too many requests. Please try again later."),
                            new JProperty("errorCode", "RATE_LIMITED")
                        ).ToString();
                    }</set-body>
                </return-response>
            </when>
        </choose>
    </on-error>
</policies>
